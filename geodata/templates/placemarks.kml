{% extends "gis/kml/base.kml" %}

{% load thumbnail %}

{% block placemarks %}
{% for place in places %}
  <Placemark>
    <name>{{ place.name }}</name>
    <description>
        <![CDATA[
        <a href="/{{ place.classurl }}/{{ place.id }}/">
           {% if place.description %}{{ place.description }}{% else %}{{ place.name }}{% endif %}
	</a>
        {% if place.image %}
           {% thumbnail place.image "100x100" as im %}
               <a href="/{{ place.classurl }}/{{ place.id }}/">
                   <img style="margin:{{ im|margin:"100x100" }}" src="{{ im.url }}" width="{{ im.x }}" height="{{ im.y }}">
	       </a>
           {% endthumbnail %}
        {% endif %}
        ]]>
    </description>
    {{ place.kml|safe }}
  </Placemark>
{% endfor %}
{% endblock %}

